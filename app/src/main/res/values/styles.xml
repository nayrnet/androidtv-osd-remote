<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme" parent="Theme.Leanback">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primaryDark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:textColorLink">@color/primary</item>
  </style>

  <style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="AppTheme.About" parent="android:Theme.Material.NoActionBar">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primaryDark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:textAppearance">@style/AppTheme.About.TextAppearance</item>
    <item name="android:textAppearanceLarge">@style/AppTheme.About.TextAppearance.Large</item>
    <item name="android:textAppearanceMedium">@style/AppTheme.About.TextAppearance.Medium</item>
    <item name="android:textAppearanceSmall">@style/AppTheme.About.TextAppearance.Small</item>
    <item name="android:textColorLink">@color/primary</item>
  </style>


  <style name="AppTheme.About.TextAppearance.Small" parent="android:TextAppearance.Material.Small">
    <item name="android:textSize">12sp</item>
  </style>


  <style name="AppTheme.About.TextAppearance" parent="android:TextAppearance.Material">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?android:attr/textColorTertiary</item>
  </style>


  <style name="AppTheme.About.TextAppearance.Medium" parent="android:TextAppearance.Material.Medium">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>


  <style name="AppTheme.About.TextAppearance.Large" parent="android:TextAppearance.Material.Large">
    <item name="android:textSize">24sp</item>
  </style>


  <style name="AppTheme.ActionItem" parent="android:Widget.Material.TextView">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primaryDark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">522664826482684dp</item>
    <item name="android:elevation">2dp</item>
    <item name="android:clickable">true</item>
    <item name="android:longClickable">false</item>
    <item name="android:focusable">true</item>
    <item name="android:background">@drawable/actionitem_bkg</item>
    <item name="android:textColor">@color/textPrimary</item>
    <item name="android:textColorLink">@color/primary</item>
    <item name="android:textIsSelectable">false</item>
    <item name="android:textSize">26sp</item>
    <item name="android:onClick">execAction</item>
  </style>

  <style name="AppTheme.License.TextAppearance.Small" parent="AppTheme.About.TextAppearance.Small" />
  <style name="AppTheme.License.TextAppearance" parent="AppTheme.About.TextAppearance" />
  <style name="AppTheme.License.TextAppearance.Medium" parent="AppTheme.About.TextAppearance.Medium" />
  <style name="AppTheme.License.TextAppearance.Large" parent="android:TextAppearance.Material.Large" />


  <style name="AppTheme.Space" parent="android:Widget">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">15dp</item>
  </style>

</resources>
